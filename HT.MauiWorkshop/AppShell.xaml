<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HT.MauiWorkshop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HT.MauiWorkshop"
    xmlns:pages="clr-namespace:HT.MauiWorkshop.Pages"
    Shell.FlyoutBehavior="Flyout">

    
        <FlyoutItem Title="Add"
             Icon="circle_plus_solid.svg">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate pages:AddCarPage}"
                Route="MainPage" />
            </FlyoutItem>

        <FlyoutItem Title="List"
             Icon="car_solid.svg">
            <ShellContent
                Title="List"
                Route="List"
                ContentTemplate="{DataTemplate pages:CarListPage}" />
        </FlyoutItem>

</Shell>

