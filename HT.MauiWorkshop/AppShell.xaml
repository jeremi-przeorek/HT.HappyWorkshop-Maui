<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HT.MauiWorkshop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HT.MauiWorkshop"
    xmlns:pages="clr-namespace:HT.MauiWorkshop.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="List"
             Icon="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate pages:AddCarPage}"
                Route="MainPage" />
            </Tab>

        <Tab Title="Add">
            <ShellContent
                Title="List"
                Route="List"
                ContentTemplate="{DataTemplate pages:CarListPage}" />
        </Tab>
    </TabBar>

</Shell>

